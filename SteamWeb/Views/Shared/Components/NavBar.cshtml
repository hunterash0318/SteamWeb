@Model SteamWeb.ViewComponents.NavBar.NavBar.Model

@if (Model.IsAuthenticated)
{
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    @*<span class="icon-bar"></span>*@
                </button>
                <a asp-area="" asp-controller="Games" asp-action="Index" class="navbar-brand">Steam</a>
            </div>
            <div class="navbar-collapse collapse" align="right">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Menu <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><b>@Html.Encode(Model.Username)</b></li>
                            <li>Balance: @Html.Encode(Model.Wallet)</li>
                            <li><a asp-area="" asp-controller="Users" asp-action="EditUser" asp-route-id="@Model.Id">My Account</a></li>
                            <li><a asp-area="" asp-controller="Games" asp-action="Index">Index</a></li>
                            <li><a asp-area="" asp-controller="Users" asp-action="IndexUser">User Index</a></li>
                            <li><a asp-area="" asp-controller="Games" asp-action="MyGames">My Games</a></li>
                            <li><a asp-area="" asp-controller="Games" asp-action="MyGifts">My Gifts</a></li>
                            <li><a asp-area="" asp-controller="Users" asp-action="AddFunds">Add Funds</a></li>
                            <li><a asp-area="" asp-controller="Games" asp-action="SendGift">Send Gift</a></li>
                            @if (Model.IsAdmin)
                            {
                                <li><a asp-area="" asp-controller="Games" asp-action="Add">Add Game</a></li>
                                <li><a asp-area="" asp-controller="Users" asp-action="AddUser">Add User</a></li>
                            }
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}


