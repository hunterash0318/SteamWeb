@model SteamWeb.ViewModels.Users.AddFunds
@{
    ViewData["Title"] = "AddFunds";
}

<h2>AddFunds</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFunds">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wallet" class="control-label"></label>
                <input asp-for="Wallet" class="form-control" />
                <span asp-validation-for="Wallet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>@ViewData["error"]</div>
                <input type="submit" value="Submit" class="btn btn-default" />
                <input type="hidden" asp-for="Wallet" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexUser">Back to List</a>
</div>

